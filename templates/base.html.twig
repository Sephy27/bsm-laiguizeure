{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}Welcome!{% endblock %}</title>

    {# Bootstrap CSS #}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    >

    {# Styles additionnels (optionnels) #}
    {% block stylesheets %}
      {# Si ce fichier n’est pas réellement servi, tu peux le retirer.
         Sinon laisse-le si tu l’utilises. #}
      <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
    {% endblock %}
  </head>

  <body>
    {# Navbar et flashs #}
    {% include 'partial/navbar.html.twig' %}
    {% include 'partial/flash.html.twig' %}

    {# Contenu des pages #}
    {% block body %}{% endblock %}

    {# Footer dans le body #}
    {% include 'partial/footer.html.twig' %}

    {# Bootstrap JS bundle #}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
    <script src="{{ asset('js/app.js') }}"></script>


    {# Charge ton app.js via Importmap (toujours chargé, hors des blocs) #}
    {{ importmap('app') }}

    {# Espace pour des scripts spécifiques à une page #}
    {% block javascripts %}
        
      {# si une vue enfant redéfinit ce bloc, elle n’empêchera pas importmap d’être injecté #}
    {% endblock %}
  </body>
</html>
